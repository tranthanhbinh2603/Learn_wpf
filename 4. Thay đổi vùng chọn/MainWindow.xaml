<Window x:Class="_4.Thay_đổi_vùng_chọn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4.Thay_đổi_vùng_chọn"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <Button x:Name="btRun" Click="btRun_Click">Thực thi</Button>
            <TextBox FocusableChanged="TextBox_FocusableChanged" DockPanel.Dock="Top" />
        </StackPanel>
    </Grid>
</Window>
