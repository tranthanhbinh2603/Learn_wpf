<Window x:Class="Xử_lí_với_chuỗi_dài___Tô_màu_chữ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xử_lí_với_chuỗi_dài___Tô_màu_chữ"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="250">
    <StackPanel>
        <TextBlock Margin="10" Foreground="Red">
			Đây là một control TextBlock <LineBreak />
			với nhiều dòng văn bản.
        </TextBlock> <!--Có xuống dòng + Tô màu đỏ-->        
        <TextBlock Margin="10" TextTrimming="CharacterEllipsis" Foreground="Green">
			Đây là control TextBlock với văn bản có thể không được hiển thị hoàn toàn, sẽ được biểu thị bằng dấu chấm lửng.
        </TextBlock> <!--Có dấu 3 chấm ở sau nếu thiếu, màu chữ là xanh lá cây-->
        <TextBlock Margin="10" TextWrapping="Wrap" Foreground="Blue">
			Đây là control TextBlock với văn bản được wrap tự động, sử dụng thuộc tính TextWrapping.
        </TextBlock> <!--Có xuống dòng tự động, màu chữ xanh nước biển-->
    </StackPanel>
</Window>
